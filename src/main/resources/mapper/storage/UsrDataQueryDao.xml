<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.dfjinxin.modules.storage.dao.UsrDataQueryDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.dfjinxin.modules.storage.entity.UsrDataQueryEntity" id="usrDataQueryMap">
        <result property="usrQueryid" column="Usr_Queryid"/>
        <result property="usrLognid" column="Usr_Lognid"/>
        <result property="dataTblid" column="Data_Tblid"/>
        <result property="usrDataQueryNm" column="Usr_Data_Query_Nm"/>
    </resultMap>

    <select id="selectByUserAndName" resultMap="usrDataQueryMap">
        select
            udq.Usr_Queryid,
            udq.Usr_Lognid,
            udq.Data_Tblid,
            udq.Usr_Data_Query_Nm
        from usr_data_query udq
        where udq.Usr_Lognid=#{userId} and udq.Usr_Data_Query_Nm=#{name}
        limit 1
    </select>
</mapper>